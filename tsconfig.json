{
  "ts-node": {
    // "transpileOnly": true, //  if you want to use ts-node without type checking
    "files": false
  },
  "compilerOptions": {
    // "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "isolatedModules": true,
    "paths": {
      "*": ["./node_modules/*", "./src/types/*"],
      "@src": ["src"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/api/controllers/uploadFilesControllerNew.js"]
}
