{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended", // "plugin:jsx-a11y/recommended",
    // "plugin:react-hooks/recommended"
    /* "prettier" */ "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    /* "react", "react-hooks" */ /* , "prettier" */ "@typescript-eslint"
  ],
  // "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "requireConfigFile": false,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "impliedStrict": true
    }
  },
  "rules": {
    // "indent": ["error", 2],
    "no-shadow": 0,
    "no-console": 0,
    "quotes": ["error", "single"],
    "import/no-cycle": 0,
    "arrow-body-style": 0,
    "consistent-return": 1,
    "no-param-reassign": 0,
    "no-use-before-define": 0,
    "no-underscore-dangle": 0,
    "no-promise-executor-return": 0,
    "no-unsafe-optional-chaining": 1,
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": 0,
    "no-trailing-spaces": 1, // disable spaces
    "no-multiple-empty-lines": [1, { "max": 1, "maxEOF": 0, "maxBOF": 0 }], // empty lines
    "semi": ["error", "always"],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error"],
    "prefer-destructuring": [
      1,
      {
        "object": true,
        "array": false
      }
    ]
  }
}
